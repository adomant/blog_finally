<% @articles.each do |article| %>
  <div class="container-fluid" data-article-id= <%= article.id %>>
  <div class="container feed_item">
    <div class="created_at"><%= article.created_at.strftime("%Y-%m-%d") %> <%= article.user.username %></div>
    <%= link_to article_path(article) do %>
      <h3 class="col-xs-12 h1 nodec title"> <%= article.title %> </h3>
      <div class="col-xs-12 nodec description">
      </div>
      <div class="text-center">
        <div class="image img-responsive"><%= image_tag(article.image.url, alt: 'Image')%></div>
      </div>
    <% end %>
    <div class="col-xs-12 col-md-12 text-right footer">
      <div class="dislike"> <%= link_to '<i class="fas fa-chevron-circle-down fa-2x"></i>'.html_safe, unlike_article_path(article), method: :put, remote: true, class: 'unlike_article' %> </div>
      <div class="total-likes"> <%= article.votes_for.size %> </div>
      <div class="like"> <%= link_to '<i class="fas fa-chevron-circle-up fa-2x"></i>'.html_safe, like_article_path(article), method: :put, remote: true, class: 'like_article' %> </div>
    </div>
  </div>
  </div>
<% end %>
<div class="text-center paginate">
  <%= paginate @articles %>
</div>
